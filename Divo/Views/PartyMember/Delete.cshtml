@{
}
@model Divo.Models.PartyMember

<h2>@Model.Name</h2>
<br />

<div>
    <h4>Verwijder Partij Lid</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Naam:
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Positie:
        </dt>
        <dd class="col-sm-10">
            @Model.Role
        </dd>
        <dt class="col-sm-2">
            Bio:
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
    </dl>
</div>


@using (Html.BeginForm("Remove", "PartyMember"))
{
    <section>
        <div class="col-md-4">
            @Html.HiddenFor(m => m.Name)
            @Html.HiddenFor(m => m.Role)
            @Html.HiddenFor(m => m.PartyId)
            @Html.HiddenFor(m => m.Id)
            @Html.AntiForgeryToken()

            <br />
            <div>
                <h4>Actions</h4>
                <hr />
                <button type="submit" class="btn btn-danger">Remove</button>
                <a class="btn btn-secondary" asp-action="Details" asp-route-id="@Model.Id">Cancel</a>
                <hr />
                <br />
                <a class="btn btn-secondary" asp-action="Index">Terug naar de lijst</a>
            </div>
        </div>
    </section>
}

