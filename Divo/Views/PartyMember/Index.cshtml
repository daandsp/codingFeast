@model IEnumerable<Divo.Models.PartyMember>
@{
}

<h2>Partij Leden</h2>
<h4>Manage partijleden voor admins</h4>
<hr />
<a class="btn btn-primary" asp-action="New">Voeg een partijlid toe</a>
<br/>
<br />

@if (!Model.Any())
{
    <hr />
    <br />
    <p>Er zijn nog geen partijleden voor deze partij</p>
}
else
{
    <div class="table__container">
        <table class="table" id="Party">
            <thead>
                <tr>
                    <th>
                        Naam
                    </th>
                    <th>
                        Positie
                    </th>
                    <th>
                        Partij
                    </th>
                    <th>
                        Opties
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var partymember in Model)
                {
                    <tr>
                        <td>
                            @partymember.Name
                        </td>
                        <td>
                            @partymember.Role
                        </td>
                        <td>
                            @partymember.Party.Name
                        </td>
                        <td>
                            <a class="btn btn-secondary" asp-action="Details" asp-route-id="@partymember.Id">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@section Scripts
{
    <script>
        $(document).ready(function () {
            $('#Voting').DataTable();
        });
    </script>
}