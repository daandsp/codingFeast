

@using Divo.Views.Shared
@model IEnumerable<Divo.Models.Voting>
@{
    ViewData["Title"] = "Stembussen";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<br />
@if (!Model.Any())
{
    <div class="alert alert-warning" role="alert">
        <p>
            <strong>Er staan geen stembussen meer open, klik <a class="btn btn-warning" asp-action="New"><strong>hier</strong></a> om een nieuwe stembus aan te maken</strong>
        </p>
    </div>
}
else
{
    <div class="table__container">
        <table class="table" id="Voting">
            <thead>
                <tr>
                    <th>
                        Naam
                    </th>
                    <th>
                        Beschrijving
                    </th>
                    <th>
                        Opties
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var voting in Model)
                {
                    <tr>
                        <td>
                            @voting.Name
                        </td>
                        <td>
                            @voting.Description
                        </td>
                        <td>
                            <a class="btn btn-secondary" asp-action="Details" asp-route-id="@voting.Id">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@section Scripts
{
    <script>
        $(document).ready(function () {
            $('#Voting').DataTable();
        });
    </script>
}