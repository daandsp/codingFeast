
@model Vidly.Models.Customer

@{
    ViewData["Title"] = "Customers - Details";
}

<h2>@Model.Name</h2>
<br />

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name:
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Date of Birth:
        </dt>
        <dd class="col-sm-10">
            @Model.DateOfBirth.ToLongDateString()
        </dd>
        <dt class="col-sm-2">
            Membership type:
        </dt>
        <dd class="col-sm-10">
            @Model.MembershipType.Name
        </dd>
        <dt class="col-sm-2">
            Is subscribed:
        </dt>
        <dd class="col-sm-10">
            @Model.IsSubscribedToNewsletter
        </dd>
    </dl>
</div>
<div class="col-md-4">
    <br />
    <h4>Actions</h4>
    <hr />
    <div>
        <a class="btn btn-info" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        <a class="btn btn-warning" asp-action="Remove" asp-route-id="@Model.Id">Remove</a>
    </div>
    <hr />
    <br />
    <div>
        <a class="btn btn-secondary" asp-action="Index">Return to List</a>
    </div>
</div>
