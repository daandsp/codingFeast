
@model Vidly.Models.Movie

@{
    ViewData["Title"] = "Movies - Details";
}

<h2>@Model.Name</h2>
<br />

<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name:
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Release Date:
        </dt>
        <dd class="col-sm-10">
            @Model.ReleaseDate.ToLongDateString()
        </dd>
        <dt class="col-sm-2">
            Date Added:
        </dt>
        <dd class="col-sm-10">
            @Model.DateAdded.ToLongDateString()
        </dd>
        <dt class="col-sm-2">
            In Stock:
        </dt>
        <dd class="col-sm-10">
            @Model.NumberInStock
        </dd>
        <dt class="col-sm-2">
            In Short time:
        </dt>
        <dt>
            @Model.DateAdded.ToLongDateString()
        </dt>
        <dt class="col-sm-2">
            Genre:
        </dt>
        <dd class="col-sm-10">
            @Model.Genre.Name
        </dd>
    </dl>
</div>
@if (User.Identity.IsAuthenticated)
{
    if (User.IsInRole(RoleName.CanManageMovies))
    {
        <div class="col-md-4">
            <br />
            <h4>Actions</h4>
            <hr />
            <div>
                <a class="btn btn-info" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                <a class="btn btn-warning" asp-action="Remove" asp-route-id="@Model.Id">Remove</a>
            </div>
        </div>
    }
}
<div class="col-md-4">
    <hr />
    <br />
    <div>
        <a class="btn btn-secondary" asp-action="Index">Return to List</a>
    </div>
</div>
