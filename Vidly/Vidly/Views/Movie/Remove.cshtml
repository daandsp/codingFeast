
@model Vidly.Models.Movie

@{
    ViewData["Title"] = "Movies - Delete";
}

<h2>@Model.Name</h2>
<br />

<div>
        <h4>Remove movie.</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Name:
            </dt>
            <dd class="col-sm-10">
                @Model.Name
            </dd>
            <dt class="col-sm-2">
                Release Date:
            </dt>
            <dd class="col-sm-10">
                @Model.ReleaseDate.ToLongDateString()
            </dd>
            <dt class="col-sm-2">
                Date Added:
            </dt>
            <dd class="col-sm-10">
                @Model.DateAdded.ToLongDateString()
            </dd>
            <dt class="col-sm-2">
                In Stock:
            </dt>
            <dd class="col-sm-10">
                @Model.NumberInStock
            </dd>
            <dt class="col-sm-2">
                Genre:
            </dt>
            <dd class="col-sm-10">
                @Model.Genre.Name
            </dd>
        </dl>
    </div>


@using (Html.BeginForm("Delete", "Movie"))
{
<section>
    <div class="col-md-4">
        @Html.HiddenFor(m => m.Name)
        @Html.HiddenFor(m => m.ReleaseDate)
        @Html.HiddenFor(m => m.DateAdded)
        @Html.HiddenFor(m => m.NumberInStock)
        @Html.HiddenFor(m => m.GenreId)
        @Html.HiddenFor(m => m.Id)
        @Html.AntiForgeryToken()

        <br />
        <div>
            <h4>Actions</h4>
            <hr />
            <button type="submit" class="btn btn-danger">Remove</button>
            <a class="btn btn-secondary" asp-action="Details" asp-route-id="@Model.Id">Cancel</a>
            <hr />
            <br />
            <a class="btn btn-secondary" asp-action="Index">Return to List</a>
        </div>
    </div>
</section>
}
