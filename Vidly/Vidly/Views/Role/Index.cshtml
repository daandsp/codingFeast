@{
}

@model IQueryable<Microsoft.AspNetCore.Identity.IdentityUser>

<h1>All Roles</h1>
<hr/>
<br/>

<table class="table">
    <thead>
    <tr>
        <th>
            ID
        </th>
        <th>
            UserName
        </th>
        <th>
            Actions
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>
                @user.Id
            </td>
            <td>
                @user.UserName
            </td>
            <td>
                <a class="btn btn-secondary" asp-action="Update" asp-route-id="@user.Id">Update</a>
            </td>
        </tr>
    }
    </tbody>
</table>
